                              <note xml:id="s2n12" dur="8" oct="4" pname="e" />
                              <note xml:id="s2n13" dur="8" oct="4" pname="g" />
                              <note xml:id="s2n14" dur="8" oct="5" pname="c" />
                           </chord>
                        </layer>
                     </staff>
                     <tie startid="#s2n12" endid="#s2n17" bulge="1.0 50%" curvedir="below" />
