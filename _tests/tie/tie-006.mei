                  <staffGrp>
                     <staffDef n="1" lines="5" clef.shape="G" clef.line="2" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure n="1" label="feature-example">
                     <staff n="1">
                        <layer n="1">
                           <rest dur="16" />
