                     <tie startid="#s2n3" endid="#s2n7" bulge="1.0 50%" curvedir="below" />
                     <tie startid="#s2n2" endid="#s2n8" bulge="1.0 50%" curvedir="above" />
                     <tie startid="#s2n1" endid="#s2n9" bulge="1.0 50%" curvedir="above" />
                  </measure>
                  <measure n="2">
                     <staff n="1">
                        <layer n="1">
                           <chord dur="2">
