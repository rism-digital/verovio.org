                              <note xml:id="s2n9" dur="8" oct="5" pname="c" />
                           </chord>
                        </layer>
                     </staff>
                     <tie startid="#s2n6" endid="#s2n11" />
                     <tie startid="#s2n7" endid="#s2n12" />
                     <tie startid="#s2n8" endid="#s2n13" />
