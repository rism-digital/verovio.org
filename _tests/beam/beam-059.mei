                           <beam>
                              <note dots="1" dur="16" oct="5" pname="e" stem.dir="down" />
                              <note dur="32" oct="5" pname="f" stem.dir="down" />
                           </beam>
                        </layer>
                     </staff>
                  </measure>
                  <measure>
                     <staff n="1" visible="false" />
                  </measure>
                  <measure left="invis" right="invis">
