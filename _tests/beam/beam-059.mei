                           </beam>
                           <beam>
                              <note dots="1" dur="8" oct="5" pname="e" stem.dir="down" />
                              <note dur="16" oct="5" pname="f" stem.dir="down" />
                           </beam>
                        </layer>
                     </staff>
                  </measure>
                  <measure>
                     <staff n="1" visible="false" />
                  </measure>
                  <measure left="invis" right="invis">
                     <staff n="1">
                        <layer n="1">
                           <beam>
                              <note dots="1" dur="16" oct="4" pname="f" stem.dir="up" />
                              <note dur="32" oct="4" pname="e" stem.dir="up" />
                           </beam>
                           <beam>
                              <note dots="1" dur="16" oct="5" pname="f" stem.dir="up" />
