<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="5.0.0-dev">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Example with hairpin on several staves</title>
         </titleStmt>
         <pubStmt>
            <date isodate="2017-05-09">2017-05-09</date>
         </pubStmt>
         <notesStmt>
            <annot>Verovio takes into account multiple values in the "staff" attribute when a hairpin applies to several staves.</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="1.0.0" label="2">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef key.mode="major" key.sig="1s" meter.count="3" meter.unit="4">
                  <staffGrp symbol="bracket">
                     <staffDef label="Violino I" n="1" lines="5" clef.shape="G" clef.line="2" key.sig="1f" />
                     <staffDef label="Violino II" n="2" lines="5" clef.shape="G" clef.line="2" key.sig="1f" />
                     <staffDef label="Viola" n="3" lines="5" clef.shape="C" clef.line="3" key.sig="1f" />
                     <staffDef label="Violoncello" n="4" lines="5" clef.shape="F" clef.line="4" key.sig="1f" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure n="5">
                     <staff n="1">
                        <layer n="1">
                           <note xml:id="d690095e1338" dur="4" oct="5" pname="f" tie="i" />
                           <beam>
                              <note xml:id="d690095e1355" dur="8" oct="5" pname="f" tie="t" />
                              <note dur="16" oct="5" pname="g" />
                              <note dur="16" oct="5" pname="f" />
                           </beam>
                           <beam>
                              <note xml:id="d690095e1411" dur="8" oct="5" pname="e" />
                              <note dur="8" oct="5" pname="f" />
                           </beam>
                        </layer>
                     </staff>
                     <staff n="2">
                        <layer n="1">
                           <note xml:id="d690095e1454" dots="1" dur="2" oct="4" pname="b" tie="i" />
                        </layer>
                     </staff>
                     <staff n="3">
                        <layer n="1">
                           <note xml:id="d690095e1485" dots="1" dur="2" oct="4" pname="d" />
                        </layer>
                     </staff>
                     <staff n="4">
                        <layer n="1">
                           <note xml:id="d690095e1513" dots="1" dur="2" oct="3" pname="d" />
                        </layer>
                     </staff>
                     <dynam place="below" staff="1 2 3 4" tstamp="1.000000">p</dynam>
                     <hairpin staff="1 2 3 4" tstamp="1.500000" tstamp2="1m+1.5000" form="cres" place="below" />
                     <slur startid="#d690095e1355" endid="#d690095e1411" curvedir="above" />
                     <slur startid="#d690095e1485" endid="#d690095e1620" curvedir="above" />
                     <slur startid="#d690095e1513" endid="#d690095e1651" curvedir="above" />
                  </measure>
                  <measure n="6">
                     <staff n="1">
                        <layer n="1">
                           <note xml:id="d690095e1542" dur="2" oct="5" pname="g" />
                           <note xml:id="d690095e1558" dur="4" oct="4" pname="b" />
                        </layer>
                     </staff>
                     <staff n="2">
                        <layer n="1">
                           <note xml:id="d690095e1580" dur="2" oct="4" pname="b" tie="t" />
                           <note xml:id="d690095e1603" dur="4" oct="4" pname="g" />
                        </layer>
                     </staff>
                     <staff n="3">
                        <layer n="1">
                           <note xml:id="d690095e1620" dots="1" dur="2" oct="4" pname="c" />
                        </layer>
                     </staff>
                     <staff n="4">
                        <layer n="1">
                           <note xml:id="d690095e1651" dots="1" dur="2" oct="3" pname="e" />
                        </layer>
                     </staff>
                     <hairpin staff="1 2 3 4" tstamp="2.000000" tstamp2="0m+4.0000" form="dim" place="below" />
                     <slur startid="#d690095e1542" endid="#d690095e1558" curvedir="above" />
                     <slur startid="#d690095e1580" endid="#d690095e1603" curvedir="above" />
