<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Hairpin example with different stylings</title>
            <contributor>Klaus Rettinghaus</contributor>
         </titleStmt>
         <pubStmt>
            <date>2020-06-04</date>
         </pubStmt>
         <notesStmt>
            <annot>Hairpin can be styled with the color and opening attributes.</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="3.0.0" label="2">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef>
                  <staffGrp>
                     <staffDef n="1" lines="5" clef.shape="G" clef.line="2" meter.count="4" meter.unit="4" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure n="1">
                     <staff n="1">
                        <layer n="1">
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                        </layer>
                     </staff>
                     <hairpin staff="1" tstamp="1.000000" tstamp2="0m+5.0000" form="cres" opening="5.000000vu" place="below" />
                  </measure>
                  <measure n="2">
                     <staff n="1">
                        <layer n="1">
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                        </layer>
                     </staff>
                     <hairpin staff="1" tstamp="1.000000" tstamp2="0m+5.0000" color="#12AB00" form="cres" place="below" />
                  </measure>
                  <measure n="3">
                     <staff n="1">
                        <layer n="1">
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                           <beam>
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                              <note dur="8" oct="4" pname="f" />
                           </beam>
                        </layer>
                     </staff>
                     <hairpin staff="1" tstamp="1.000000" tstamp2="0m+5.0000" form="dim" opening="1.000000vu" place="below" />
                  </measure>
               </section>
            </score>
         </mdiv>
      </body>
