<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Cue-sized grace notes</title>
         </titleStmt>
         <pubStmt>
            <date>2017-05-15</date>
         </pubStmt>
         <notesStmt>
            <annot>If grace notes are present in cues, Verovio scales them appropriately.</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="2.0.0" label="1">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef>
                  <staffGrp>
                     <staffDef n="1" lines="5" clef.shape="G" clef.line="2" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure right="invis" n="0">
                     <staff n="1">
                        <layer n="1">
                           <note dur="4" oct="4" pname="a" cue="true" grace="unacc" accid.ges="n" />
                           <note dur="4" oct="4" pname="a" grace="unacc" accid.ges="n" />
                           <note dur="4" oct="5" pname="c" cue="true" stem.dir="up" accid.ges="n" />
                        </layer>
                     </staff>
                  </measure>
               </section>
            </score>
         </mdiv>
      </body>
   </music>
