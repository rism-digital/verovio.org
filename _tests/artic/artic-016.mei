<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="5.0.0-dev">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Articulation on adjacent-note chords</title>
         </titleStmt>
         <pubStmt>
            <respStmt>
               <persName role="encoder">Klaus Rettinghaus</persName>
               <corpName role="funder">Enote GmbH</corpName>
            </respStmt>
            <date isodate="2021-12-06">2021-12-06</date>
         </pubStmt>
         <seriesStmt>
            <title>Verovio test suite</title>
         </seriesStmt>
         <notesStmt>
            <annot>Centre articulation on the notehead that is on the correct side of the stem.</annot>
         </notesStmt>
         <sourceDesc>
            <source>
               <bibl>Behind Bars, p. 119, example 3</bibl>
            </source>
         </sourceDesc>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="3.0.0" label="2">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef>
                  <staffGrp>
                     <staffDef n="1" lines="5">
                        <clef shape="G" line="2" visible="false" />
                     </staffDef>
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure>
                     <staff n="1">
                        <layer n="1">
                           <chord dur="2">
                              <artic artic="ten" />
                              <note oct="4" pname="c" />
                              <note oct="4" pname="d" />
                           </chord>
                           <chord dur="1">
                              <artic artic="acc" />
                              <note oct="4" pname="a" />
                              <note oct="4" pname="b" />
                           </chord>
                           <chord dur="4">
                              <artic artic="marc" />
                              <note oct="5" pname="e" />
                              <note oct="5" pname="f" />
                              <note oct="5" pname="g" />
                              <note oct="5" pname="a" />
                           </chord>
                        </layer>
                     </staff>
                  </measure>
                  <measure right="invis">
                     <staff n="1">
                        <layer n="1">
                           <chord dur="4">
                              <artic artic="acc" />
                              <note oct="5" pname="e" />
                              <note oct="5" pname="e" />
                           </chord>
                           <chord dur="1">
                              <artic artic="acc" />
                              <note oct="4" pname="e" />
                              <note oct="4" pname="e" />
                           </chord>
                        </layer>
                     </staff>
                  </measure>
               </section>
            </score>
         </mdiv>
      </body>
   </music>
</mei>
