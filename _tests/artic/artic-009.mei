                                 <note oct="2" pname="e" />
                                 <note oct="3" pname="c" accid="n" />
                              </chord>
                              <chord dur="8" stem.dir="down">
                                 <note oct="2" pname="e" />
                                 <note oct="3" pname="c" accid.ges="n" />
                              </chord>
