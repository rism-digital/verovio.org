                        </layer>
                     </staff>
                     <staff n="2">
                        <layer n="1">
                           <rest dur="8" ploc="g" oloc="2" />
                           <beam>
                              <chord dur="8" stem.dir="down">
                                 <note oct="2" pname="e" />
