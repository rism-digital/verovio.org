<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="https://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Ligature alignment</title>
         </titleStmt>
         <pubStmt>
            <date>2020-04-23</date>
         </pubStmt>
         <notesStmt>
            <annot>Ligature can be aligned globally with non-ligature notation</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="unknown">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef>
                  <staffGrp>
                     <staffDef n="1" notationtype="mensural.white" lines="5" clef.shape="C" clef.line="1" />
                     <staffDef n="2" notationtype="mensural.white" lines="5" clef.shape="C" clef.line="1" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <staff n="1">
                     <layer n="1">
                        <note dur="brevis" oct="4" pname="f" />
                        <ligature>
                           <note dur="semibrevis" oct="5" pname="c" lig="obliqua" />
                           <note dur="semibrevis" oct="4" pname="a" />
                           <note dur="brevis" oct="5" pname="c" />
                           <note dur="brevis" oct="4" pname="a" />
                           <note dur="brevis" oct="4" pname="f" />
                           <note dur="brevis" oct="4" pname="d" />
                        </ligature>
                        <note dur="brevis" oct="4" pname="d" />
                     </layer>
                  </staff>
                  <staff n="2">
                     <layer n="1">
                        <note dur="brevis" oct="4" pname="f" />
                        <note dur="semibrevis" oct="5" pname="c" />
                        <note dur="semibrevis" oct="4" pname="a" />
                        <note dur="brevis" oct="5" pname="c" />
                        <note dur="brevis" oct="4" pname="a" />
                        <note dur="brevis" oct="4" pname="f" />
                        <note dur="brevis" oct="4" pname="d" />
                        <note dur="brevis" oct="4" pname="d" />
                     </layer>
                  </staff>
               </section>
            </score>
         </mdiv>
      </body>
   </music>
</mei>
