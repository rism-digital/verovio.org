         </pubStmt>
         <notesStmt>
            <annot>Measure rests in multiple layers are rendered as several distinct rests.</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="2.0.0" label="2">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
