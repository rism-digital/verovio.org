<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="https://music-encoding.org/schema/4.0.0/mei-all.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="4.0.0">
   <meiHead>
      <fileDesc>
         <titleStmt>
            <title>Tuplets with stemless notes</title>
         </titleStmt>
         <pubStmt>
            <date>2017-04-24</date>
         </pubStmt>
         <notesStmt>
            <annot>When tuplets contain a stemless note, Verovio correctly renders the brackets.</annot>
         </notesStmt>
      </fileDesc>
      <encodingDesc>
         <appInfo>
            <application version="2.0.0" label="1">
               <name>Verovio</name>
            </application>
         </appInfo>
      </encodingDesc>
   </meiHead>
   <music>
      <body>
         <mdiv>
            <score>
               <scoreDef>
                  <staffGrp>
                     <staffDef n="1" lines="5" clef.shape="G" clef.line="2" meter.count="4" meter.unit="4" />
                  </staffGrp>
               </scoreDef>
               <section>
                  <measure n="1">
                     <staff n="1">
                        <layer n="1">
                           <tuplet num="3" numbase="2" bracket.visible="true" num.format="count">
                              <note dur="2" oct="4" pname="f">
                                 <accid accid.ges="n" />
                              </note>
                              <note dur="2" oct="4" pname="e">
                                 <accid accid.ges="n" />
                              </note>
                              <note dur="2" oct="4" pname="d">
                                 <accid accid.ges="n" />
                              </note>
                           </tuplet>
                        </layer>
                     </staff>
                  </measure>
                  <measure>
                     <staff n="1">
                        <layer n="1">
                           <tuplet num="3" numbase="2" bracket.visible="true" num.format="count">
                              <note dur="1" oct="4" pname="f">
                                 <accid accid.ges="n" />
                              </note>
                              <note dur="2" oct="4" pname="e">
                                 <accid accid.ges="n" />
                              </note>
                           </tuplet>
                        </layer>
                     </staff>
                  </measure>
                  <measure right="end">
                     <staff n="1">
                        <layer n="1">
                           <tuplet num="3" numbase="2" bracket.visible="true" num.format="count">
                              <note dur="2" oct="4" pname="e">
                                 <accid accid.ges="n" />
                              </note>
                              <note dur="1" oct="4" pname="d">
                                 <accid accid.ges="n" />
                              </note>
                           </tuplet>
                        </layer>
                     </staff>
                  </measure>
               </section>
            </score>
         </mdiv>
      </body>
   </music>
</mei>
